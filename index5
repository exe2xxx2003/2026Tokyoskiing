        const ItineraryCard = ({ event }) => {
          const getIcon = (type) => {
            switch(type) {
              case 'transport': return <Icons.Train className="w-5 h-5 text-stone-600" />;
              case 'food': return <Icons.Utensils className="w-5 h-5 text-orange-600" />;
              case 'hotel': return <Icons.Hotel className="w-5 h-5 text-indigo-600" />;
              case 'shopping': return <Icons.ShoppingBag className="w-5 h-5 text-pink-600" />;
              case 'task': return <Icons.CheckCircle2 className="w-5 h-5 text-green-600" />;
              default: return <Icons.MapPin className="w-5 h-5 text-stone-500" />;
            }
          };

          const handleNav = (e) => {
            e.stopPropagation();
            const query = event.nav || event.location || event.title;
            window.open(`https://www.google.com/maps/search/?api=1&query=\${encodeURIComponent(query)}`, '_blank');
          };

          return (
            <div className={`relative pl-4 pb-8 border-l-2 \${event.highlight ? 'border-red-400' : 'border-stone-200'} last:border-l-0 last:pb-0`}>
