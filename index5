        const BudgetView = () => {
          const [items, setItems] = useState(tripData.budget);
          const [newItem, setNewItem] = useState({ item: "", cost: "" });

          const total = items.reduce((acc, curr) => acc + Number(curr.cost), 0);

          const handleAdd = () => {
            if (newItem.item && newItem.cost) {
              setItems([...items, { ...newItem, type: 'custom' }]);
              setNewItem({ item: "", cost: "" });
            }
          };

          return (
            <div className="px-5 py-6 pb-24 animate-fade-in">
              <h2 className="text-xl font-bold text-stone-800 flex items-center gap-2 mb-6">
                <Icons.Wallet className="w-5 h-5" /> 預算管理
              </h2>

              <div className="bg-stone-800 text-white p-6 rounded-2xl shadow-lg mb-8 text-center">
                <p className="text-stone-400 text-sm mb-1">目前預估總花費 (日圓)</p>
                <p className="text-4xl font-bold font-mono">¥{total.toLocaleString()}</p>
              </div>

              <div className="space-y-3 mb-8">
                {items.map((entry, idx) => (
                  <div key={idx} className="flex justify-between items-center bg-white p-4 rounded-xl shadow-sm border border-stone-100">
                    <span className="text-stone-700 font-medium">{entry.item}</span>
                    <span className="font-mono text-stone-900 font-bold">¥{Number(entry.cost).toLocaleString()}</span>
                  </div>
                ))}
              </div>

              <div className="bg-stone-100 p-4 rounded-xl">
                <h3 className="text-sm font-bold text-stone-500 mb-3">新增一筆消費</h3>
                <div className="flex gap-2 mb-2">
                  <input 
                    type="text" 
                    placeholder="項目名稱" 
                    className="flex-1 p-2 rounded-lg border border-stone-300 text-sm"
                    value={newItem.item}
                    onChange={(e) => setNewItem({...newItem, item: e.target.value})}
                  />
                  <input 
                    type="number" 
                    placeholder="金額" 
                    className="w-24 p-2 rounded-lg border border-stone-300 text-sm"
                    value={newItem.cost}
                    onChange={(e) => setNewItem({...newItem, cost: e.target.value})}
                  />
                </div>
                <button 
                  onClick={handleAdd}
                  className="w-full bg-red-600 text-white py-2 rounded-lg text-sm font-bold shadow-sm hover:bg-red-700 transition-colors"
                >
                  加入列表
                </button>
              </div>
            </div>
          );
        };

        const App = () => {
          const [activeTab, setActiveTab] = useState('itinerary');

          return (
            <div className="min-h-screen bg-stone-50 font-sans text-stone-900 max-w-md mx-auto relative shadow-2xl overflow-hidden">
              
              <div className="h-full overflow-y-auto no-scrollbar">
                {activeTab === 'itinerary' && <ItineraryView />}
                {activeTab === 'flights' && <FlightView />}
                {activeTab === 'hotels' && <HotelView />}
                {activeTab === 'budget' && <BudgetView />}
              </div>

              <div className="fixed bottom-0 left-0 right-0 max-w-md mx-auto bg-white/90 backdrop-blur-md border-t border-stone-200 flex justify-around px-2 pb-safe-area shadow-[0_-5px_10px_rgba(0,0,0,0.02)] z-50">
                <NavButton 
                  active={activeTab === 'itinerary'} 
                  icon={<Icons.Calendar className="w-6 h-6" />} 
                  label="行程" 
                  onClick={() => setActiveTab('itinerary')} 
                />
                <NavButton 
                  active={activeTab === 'flights'} 
                  icon={<Icons.Plane className="w-6 h-6" />} 
                  label="航班" 
                  onClick={() => setActiveTab('flights')} 
                />
                <NavButton 
                  active={activeTab === 'hotels'} 
                  icon={<Icons.Hotel className="w-6 h-6" />} 
                  label="住宿" 
                  onClick={() => setActiveTab('hotels')} 
                />
                <NavButton 
                  active={activeTab === 'budget'} 
                  icon={<Icons.Wallet className="w-6 h-6" />} 
                  label="預算" 
                  onClick={() => setActiveTab('budget')} 
                />
              </div>
            </div>
          );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
